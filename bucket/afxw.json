    "version": "1.66",
    "description": "2-screen filer especially for keyboard-only usage",
    "homepage": "http://akt.d.dooo.jp/akt_afxw.html",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "http://akt.d.dooo.jp/lzh/afxw64_166.zip",
            "hash": "8d07c725858bad69d1248e36aea8eb75d29c10497846bc96049cfe839a99da9e"
        },
        "32bit": {
            "url": "http://akt.d.dooo.jp/lzh/afxw32_166.zip",
            "hash": "3510bac5b47623b428da40276c99a6a836037df5532e8df2a8e4ab229a3e3e04"
        }
    },
    "bin": [
        "AFXW.EXE",
        "AFXWCFG.EXE"
    ],
    "pre_install": [
        "foreach ($ext in ('DEF','HIS','INI','KEY')) { if (-not (Test-Path \"$persist_dir\\AFXW.$ext\")) { New-Item \"$dir\\AFXW.$ext\" | Out-Null } }"
    ],
    "persist": [
        "AFXW.DEF",
        "AFXW.HIS",
        "AFXW.INI",
        "AFXW.KEY"
    ],
    "checkver": {
        "regex": "v (?<version>\\d+\\.\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://akt.d.dooo.jp/lzh/afxw64_$cleanVersion.zip"
            },
            "32bit": {
                "url": "http://akt.d.dooo.jp/lzh/afxw32_$cleanVersion.zip"
            }
        }
    }
}
